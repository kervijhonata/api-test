<main>
    <form action="/login/auth" method="post">
        <div id="email-wrapper" class="wrapper">
            <label for="input-login-email">Email</label>
            <input type="email" name="email" id="input-login-email">
        </div>
        <div id="password-wrapper" class="wrapper">
            <label for="input-login-password">password</label>
            <input type="password" name="password" id="input-login-password">
        </div>
        <div id="button-wrapper" class="wrapper">
            <button type="submit">Login</button>
        </div>
    </form>
</main>